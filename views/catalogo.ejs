            <h7 class="col-5">DA</h7>
            <h7 class="col-5">A</h7>
          </div>
          <div class="container-fluid row">
            <div class="col-5 px-1">
              <input type="text" class="form-control px-2" placeholder="minimo">
            </div>
            <div class="col-5 px-1">
              <input type="text" class="form-control px-2" placeholder="massimo">
            </div>
            <div class="col-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="35" fill="currentColor" class="bi bi-arrow-right-square bi-arrow" viewBox="0 0 16 16">
