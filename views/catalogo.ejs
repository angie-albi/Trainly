            </div>
          </div>
        </aside>

        <!-- Prodotti -->
        <section class="pb-4 pt-2 product">
          <div id="search-message" class="px-2 mb-3 mt-0"></div>
            <div id="products-container" class="row row-cols-2 row-cols-md-3 g-4">
                <!-- JS -->
            </div>
        </section>

      </div>
