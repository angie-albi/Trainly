    <!-- FOOTER -->
    <footer class="text-center py-4">
      <p class="mb-0">&copy; 2025 Trainly. Tutti i diritti riservati.</p>
    </footer>

    <!-- TOAST -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <!-- (toast: prezzo errato) -->
      <div id="priceToast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body">
            Il prezzo minimo non pu√≤ essere maggiore del prezzo massimo.
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Chiudi"></button>
        </div>
      </div>
    </div>

    <!-- OFFCANVAS -->
      <!-- (cerca)-->
      <div class="offcanvas offcanvas-top " tabindex="-1" id="offcanvasTop" aria-labelledby="offcanvasTopLabel">
        <div class="offcanvas-body p-0 pt-4">            
          <div class="container-fluid mt-3">
            <div class="row align-items-center">

              <div class="col-11 ps-5 pe-3">
                <form class="d-flex w-100" role="search">
                  <input type="search" class="form-control form-search" placeholder="Cerca" aria-label="Search"> 
                  <button type="button" class="btn btn-light ms-2">Cerca</button>
                </form>
              </div>

              <div class="col-1 ps-0 text-end pe-4">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
              </div>
              
            </div>
          </div>
        </div>
      </div>

