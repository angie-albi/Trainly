    <!-- MAIN -->
    <main class="content-wrap me-3">
      <div class="container-fluid">

        <!--- Filtri mobile -->
        <div class="d-lg-none text-end px-4 pt-3">
          <button class="btn btn-outline-secondary btn-filtri-mobile text-white" type="button" data-bs-toggle="offcanvas" data-bs-target="#filterOffcanvas">
            Filtri
          </button>
        </div>

        <!-- Filtri desktop -->
