    <!-- MAIN -->
    <main class="container my-4">
        <!-- Statistiche Rapide -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title text-white">Programmi</h5>
                        <h2 id="totalPrograms">0</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title text-white">Coaching</h5>
                        <h2 id="totalCoaching">0</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h5 class="card-title text-white">E-books</h5>
                        <h2 id="totalEbooks">0</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-black">
                    <div class="card-body">
                        <h5 class="card-title text-black">Totale Prodotti</h5>
                        <h2 id="totalProducts">0</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Controlli -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" id="searchInput" class="form-control" placeholder="Cerca prodotti...">
                    <button class="btn btn-outline-secondary border" onclick="searchProducts()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <button class="btn btn-admin text-white" onclick="openAddModal()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                    </svg>
                    Nuovo Prodotto
                </button>
            </div>
        </div>

        <!-- Tabella Prodotti -->
        <div class="card shadow mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Gestione Prodotti</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">Immagine</th>
                                <th>Nome</th>
                                <th>Categoria</th>
                                <th>Prezzo</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="productsTable">
                            <!-- JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- Tabella Ordini -->
        <div class="card shadow">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Gestione Ordini</h5>
                <div class="col-md-5">
                    <input type="text" id="orderSearchInput" class="form-control form-control-sm" placeholder="Cerca per ID ordine o email...">
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">ID Ordine</th>
                                <th>Email Utente</th>
                                <th>Data</th>
                                <th>Stato</th>
                                <th>Totale</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody id="ordersTableBody">
                            <!-- JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal Aggiungere/Modificare Prodotto -->
    <div class="modal fade" id="productModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header admin-header text-white">
                    <h5 class="modal-title" id="modalTitle">Nuovo Prodotto</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="productForm">
                        <input type="hidden" id="productId">
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="productTitle" class="form-label">Nome Prodotto *</label>
                                    <input type="text" class="form-control" id="productTitle" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="productCategory" class="form-label">Categoria *</label>
                                    <select class="form-select" id="productCategory" required>
                                        <option value="">Seleziona categoria</option>
                                        <option value="programma">Programma</option>
                                        <option value="coaching">Coaching</option>
                                        <option value="e-book">E-book</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="productPrice" class="form-label">Prezzo (â‚¬) *</label>
                                    <input type="number" class="form-control" id="productPrice" step="0.01" min="0" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="productImage" class="form-label">URL Immagine *</label>
                                    <input type="text" class="form-control" id="productImage" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="productDescription" class="form-label">Descrizione *</label>
                            <textarea class="form-control" id="productDescription" rows="4" required></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annulla</button>
                    <button type="button" class="btn btn-admin text-white" onclick="saveProduct()">Salva Prodotto</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage">
                    Operazione completata con successo!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/admin.js"></script>

</body>
</html>