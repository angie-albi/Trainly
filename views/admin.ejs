<%- include('partials/header', { title: 'Pannello Admin'}) %>            

<!-- Header Admin -->
    <header class="admin-header text-white py-4 shadow">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="mb-0">
